{
  "type": "module",
  "scripts": {
    "test": "run-s build && jasmine",
    "build": "run-s lint clean build:*",
    "clean": "rm -rf dist && rm -rf src/images/cache && mkdir -p dist/images/cache && mkdir src/images/cache",
    "build:js": "node scripts/esbuild.mjs",
    "lint": "tsc && eslint --fix src && prettier --write src",
    "start": "nodemon src/index.ts",
    "serve": "node dist/index.js",
    "postinstall": "run-s test"
  },
  "dependencies": {
    "@squoosh/lib": "^0.4.0",
    "express": "^4.17.3",
    "image-size": "^1.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",
    "@types/node": "^17.0.25",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "esbuild": "^0.14.38",
    "esbuild-plugin-copy": "^1.3.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-prettier"
    ],
    "extends": [
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "dist/"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": [
          "*.{ts,tsx}"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true
  }
}
