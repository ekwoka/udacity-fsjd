{
  "name": "storefront_backend",
  "version": "0.2.2",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "test": "run-s build pretest jasmine",
    "build": "run-s lint clean build:*",
    "clean": "rm -rf dist",
    "build:js": "node scripts/esbuild.mjs",
    "jasmine": "ENV=test jasmine",
    "lint": "tsc && eslint --fix src && prettier --write src",
    "start": "npm i; npm run build; node ./dist/server.js",
    "serve": "node dist/server.js",
    "pretest": "run-s cleantest; db-migrate db:create full_stack_test; db-migrate --e test up",
    "cleantest": "db-migrate db:drop full_stack_test",
    "tsc": "tsc",
    "createkeys": "mkdir secrets && ssh-keygen -t rsa -b 4096 -m PEM -f secrets/jwtRS256.key && openssl rsa -in secrets/jwtRS256.key -pubout -outform PEM -out secrets/jwtRS256.key.pub",
    "setup": "run-s db createkeys test",
    "db": "run-s db:*",
    "db:create": "docker-compose create",
    "db:up": "docker-compose start && sleep 1",
    "db:init": "db-migrate -e clean db:create full_stack_dev; db-migrate db:create full_stack_test",
    "db:migrate": "db-migrate up"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.32",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "esbuild": "^0.14.39",
    "esbuild-plugin-copy": "^1.3.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.7.0",
    "tsc-watch": "^5.0.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-prettier"
    ],
    "extends": [
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "dist/"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": [
          "*.{ts,tsx}"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true
  }
}
